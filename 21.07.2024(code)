       System.out.println(y);
       boolean z;
    
       
    }
    
}



//X>Y
public class Main {
    public static void main(String []args)
    {
        int x=10,y=20;
        boolean z=x>y;
        System.out.println(z);
       
    }
    
}
// IF STATEMENT
public class Main {
    public static void main(String []args)
    {
       int a=8;
       if (a>5){
        System.out.println("8 is greater than 5");

       }
       
    }
    
}
// IF ELSE
public class Main {
    public static void main(String []args)
    {
       int a=8;
       if (a>10){
        System.out.println(a+"is greater than 10");

       }
       else{
        System.out.println(a+"is lesser than 10");
       }
       
    }
    
}
//IF ,ESLE IF,ELSE
public class Main {
    public static void main(String []args)
    {
       int a=8;
       if (a>10){
        System.out.println("good day");

       }
       else if(a>5 && a<10){
        System.out.println("COUCOU");
       }
       else{
        System.out.println("good eve");
       }
       
    }
    
}
//SWITCH CASE
public class Main {
    public static void main(String []args)
    {
       int a=3;
       switch(a){
        case 1:
            System.out.println("Monday");
            break;
        case 2:
            System.out.println("Sunday");
            break;
        case 3:
            System.out.println("HBD");
            break;
        case 4:
            System.out.println("holiday");
            break;
        default:
            System.out.println("yessss");
            break;

       }
        
       
    }
    
}
//WHILE LOOP
public class whileloop {
    public static void main(String args[])
    {
        
       int a=0;
       while(a<5){
        System.out.println(a);
        a++;
    }
    
}
}



//DO-WHILE
public class whileloop {
    public static void main(String args[])
    {
        
       int a=0;
    
       do{
        System.out.println(a);
        a++;
    }
    while(a<6);
    
}
}
//FOR EACH
public class foreachloop {
    public static void main(String args[]){
        String[] arr={"benz","BMW","Marda","volvo"};
        for (String a:arr){
            System.out.println(a);
        }
    }
}
// BREAK IN LOOP
public class foreachloop {
    public static void main(String args[]){

        int a=0;
        while(a<5){
            if (a==2)
            break;
         System.out.println(a);
         a++;}
         
    }
}
//USER INPUT
import java.util.Scanner;
public class foreachloop {
    public static void main(String args[]){
        Scanner obj=new Scanner(System.in);
        System.out.println("enetr name");
        String name=obj.nextLine();
        System.out.println("enter the roll number");
        int a=obj.nextInt();
        System.out.println("name="+name+"\nroll no.="+a);      
         
    }
}








